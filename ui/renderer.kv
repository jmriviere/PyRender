<Renderer>:

# Main layout
AnchorLayout:
    anchor_x: 'right'
    anchor_y: 'top'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            # Rendering area
            Renderer:
                threshold_widget: threshold
                size_hint_x: None
                width: root.width * .9
                canvas:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        texture: self.fbo.texture
            BoxLayout:    
                orientation: 'vertical'
                # Mask area
                MaskDisplay:
                    canvas:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            texture: self.fbo.texture
                    id: mask
                    size_hint_x: None
                    size_hint_y: None
                    size: root.width *.1, root.width *.1
                    on_pos: self.update_glsl()
                    on_size: self.update_glsl()
                BoxLayout:
                    orientation: 'horizontal'
                    # Slider spec
                    BoxLayout:
                        orientation: 'vertical'
                        Slider:
                            orientation: 'vertical'    
                            id: rspec    
                            min: 0.0
                            max: 500
                            step: 0.1
#                            on_value: mask.update_glsl(self.value)
                        Label:
                            text: 'Rspec: ' + str(rspec.value) + ' '
                            size_hint_y: .1
                        BoxLayout:
                            size_hint_y: .1    
                            orientation: 'horizontal'
                            Label:
                                text: 'Divide?'
                            CheckBox:
                                active: True
                    # Slider diff
                    BoxLayout:
                        orientation: 'vertical'
                        Slider:
                            orientation: 'vertical'    
                            id: rdiff    
                            min: 0.0
                            max: 500
                            step: 0.1
#                            on_value: mask.update_glsl(self.value)
                        Label:
                            text: 'Rdiff: ' + str(rdiff.value) + ' '
                            size_hint_y: .1
                        BoxLayout:
                            size_hint_y: .1    
                            orientation: 'horizontal'
                            Label:
                                text: 'Divide?'
                            CheckBox:
                                active: True
                # Slider intensity
                BoxLayout:
                    orientation: 'vertical'
                    Slider:
                        orientation: 'vertical'    
                        id: lintensity    
                        min: 0.0
                        max: 500
                        step: 0.1
#                        on_value: mask.update_glsl(self.value)
                    Label:
                        text: 'Lintensity: ' + str(lintensity.value) + ' '
                        size_hint_y: .1
                    BoxLayout:
                        size_hint_y: .1    
                        orientation: 'horizontal'
                        Label:
                            text: 'Divide?'
                        CheckBox:
                            active: True
        # Slider threshold
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
#            height: root.height * .05
            Label:
                text: 'Threshold: ' + str(threshold.value) + ' '
                size_hint_x: .09
            Slider:    
                id: threshold    
                min: 0.0
                max: 1.0
                step: 0.01
                on_value: mask.update_glsl(self.value)
            Button:
                size_hint_x: .1
                text: 'lol'    
